<div class='index spaced-blurb rounded-blurb'>
<h1>Teams for <%= link_to(@event.name, event_path(@event)) %></h1>
<table class='index-table'>
  <tr>
    <th>Name</th>
    <th>Users</th>
    <th colspan='3'>Actions</th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td class='index-attr'><%= team.name %></td>
    <td class='index-attr'><%= team.users.map(&:name).join("<br />").html_safe %></td>
    <td class='action-button'><%= button_to 'Show', event_team_path(@event, team), :method => :get %></td>
    <td class='action-button'><%= button_to 'Edit', edit_event_team_path(@event, team), :method => :get %></td>
    <td class='action-button'><%= button_to 'Destroy', event_team_path(@event, team), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
</div>

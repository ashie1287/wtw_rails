<div class='spaced-blurb rounded-blurb'>
  <h1>Listing events</h1>

  <table class='index-table'>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Location</th>
      <th>Start time</th>
      <th>End time</th>
      <th></th>
      <th></th>
    </tr>

  <% @events.each do |event| %>
    <tr>
      <td><%= image_tag image_event_path(event), :style => 'float:left; width: 100px; height: 100px;' %></td>
      <td><%= event.name %></td>
      <td><%= event.location %></td>
      <td><%= event.start_time %></td>
      <td><%= event.end_time %></td>
      <td><%= button_to 'Edit', edit_event_path(event), :method => :get %></td>
      <td><%= button_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New Event', new_event_path %>
</div>

<div class="event-blurb">
  <p class="event-title"><%= event.name %></p>
  <table>
    <tr>
      <td><%= image_tag(event.image.url(:thumb), :class => "event-thumb") %></td>
      <td><%= render(:partial => 'shared/event_table', :locals => {:event => event}) %></td>
    </tr>
  </table>
  <a class="div-link" href="<%= event_path(event.id) %>"><span></span></a>
</div>

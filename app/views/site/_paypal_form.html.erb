<%= stylesheet_link_tag '/fancybox/jquery.fancybox-1.3.4.css' %>
<%= javascript_include_tag '/fancybox/jquery.fancybox-1.3.4.js' %>
<%= javascript_include_tag '/fancybox/jquery.mousewheel-3.0.4.pack.js' %>

<a id="paypal-button" href="#paypal-modal"><img class="paypal-img" src="https://www.paypalobjects.com/en_US/i/btn/btn_donateCC_LG.gif" /></a>

<div style="display:none;">
  <div id="paypal-modal" class="center-text">
    <p class="page-title">Donate!</p>
    <p class="page-text">Please select one of the causes to donate to from the dropdown below. Thanks so much for your support!</p>

    <form action="https://www.paypal.com/cgi-bin/webscr" method="post">
      <input type="hidden" name="cmd" value="_s-xclick" />
      <input type="hidden" name="item_name" value="Donation" />
      <select name="hosted_button_id">
        <option value="ZLEJKXRAA85DJ">Walk The Walk</option>
        <option value="UJCCRJ2M4UBPS">De-Feet Childhood Hunger</option>
      </select>
      <br />
      <br />
      <input type="submit" onclick="$.fancybox.close()" value="Donate!" />
    </form>
    <br />
    <a href="javascript:void(0)" onclick="$.fancybox.close()">Close</a>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('a#paypal-button').fancybox({modal: true});
  });
</script>
